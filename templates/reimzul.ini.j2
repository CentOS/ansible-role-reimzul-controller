[bstore]
base_url = http://localhost:11081/bstore/repo/

[scm]
git_url = {{ reimzul_git_url }}

[logs]
logfile = /var/log/reimzul/reimzul.log

[mail]
notifications = {{ reimzul_mail_notifications }}
mail_from = {{ reimzul_mail_from }}

[mail_rcpts]
{% for item in reimzul_mail_to %}
{{ item.arch }} = {% for rcpt in item.rcpts -%} {{ rcpt }}{%- if not loop.last -%},{% endif %} {% endfor %}

{% endfor %}

[mqtt]
notifications = {{ reimzul_mqtt_notifications }}
host = {{ reimzul_mqtt_broker }}
port = 8883
ca_cert = /etc/reimzul/{{ reimzul_mqtt_tls_ca_cert }}
tls_cert = /etc/reimzul/{{ reimzul_mqtt_tls_cert }}
tls_key = /etc/reimzul/{{ reimzul_mqtt_tls_key }}
tls_insecure = False
topic = {{ reimzul_mqtt_topic }}

